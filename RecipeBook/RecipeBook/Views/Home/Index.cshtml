@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0 m-0" style="font-family: Roboto; font-weight: 300;">
    <div class="m-0"
         style="padding: 50px 0 50px 0;
                background-color: transparent;
                background-image: url('@Constants.BannerPath');
                background-position: center center;
                background-attachment: inherit;
                background-size: cover;
                border-radius: 10px;">
        <div class="jumbotron m-0"
             style="padding: 50px 50px 50px 50px;
                    min-height: 200px;
                    color: #ffffff;
                    background-color: transparent;
                    background-image: none;">
            <div class="justify-content-center text-center d-flex"
                 style="min-height: 150px; height: 100px;">
                <div class="row align-items-center"
                     style="min-height: 150px;">
                    <div class="col home-title"
                         style="text-shadow: 2px 3px 3px rgba(0,0,0,.8);">
                        @Constants.SiteName
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


